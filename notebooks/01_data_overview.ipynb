# Notebook 01 — Load Medication + Summary Sheets
# ---------------------------------------------------------

import pandas as pd
from google.colab import files

# --- Upload File (Colab only) ---
try:
    uploaded = files.upload()
except:
    pass

file_name = "Krista 240726 Final.xlsx"

# --- Load Sheets ---
med = pd.read_excel(file_name, sheet_name="Medication")
med_summary = pd.read_excel(file_name, sheet_name="Med Error Summary")

# --- Combined Overview Output (single block for readability) ---
print("=== DATASET OVERVIEW ======================================")
print(f"Medication sheet shape:       {med.shape}")
print(f"Med Error Summary shape:      {med_summary.shape}")

print("\n=== FIRST 5 ROWS — MEDICATION SHEET =======================")
display(med.head())

print("=== FIRST 5 ROWS — SUMMARY SHEET ==========================")
display(med_summary.head())

# --- Validate critical fields required by the GMR Prompt ---
required_fields = [
    "Source", "Branch", "Primary Risk", "Risk Event",
    "Medication 1", "Pattern Specifics"
]

print("\n=== FIELD VALIDATION (Required for GMR Analysis) ==========")
for field in required_fields:
    print(f"{field:20} → {'YES' if field in med.columns else 'NO'}")
